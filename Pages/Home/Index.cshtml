@page
@model PCMWeb.Pages.Home.IndexModel
@{
    ViewData["Title"] = "Home";
}
@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Players Club Management</title>
    <link rel="stylesheet" href="~/css/globals.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="page-container">
        <!-- HEADER -->
        <header class="banner @(ViewData["DarkHeader"] as bool? == true ? "dark-header" : "")">
            <div class="banner-content">
                <nav class="nav-links">
                    <a asp-page="/About_Us/Index">About Us</a>
                    <a asp-page="/Athletes/Index">Athletes</a>
                    @{
                        bool isDark = (ViewData["DarkHeader"] as bool?) == true;
                        var logoSrc   = isDark 
                                        ? Url.Content("~/img/home-header-logo.png") 
                                        : Url.Content("~/img/image-1.png");
                        var logoClass = isDark 
                                        ? "footer-logo" 
                                        : "logo-image";
                }
                <a asp-page="/Home/Index">
                    <img class="@logoClass" src="@logoSrc" alt="Players Club Management logo" />
                </a>
                <a asp-page="/Services/Index">Services</a>
                <a asp-page="/Contact_Us/Index">Contact Us</a>
                </nav>
            </div>
        </header>

        <!-- HERO & TITLE -->
        <section class="hero-title-section">
            <div class="title-content">
                <h1>Players Club Management</h1>
                <p>Achieve greatness on and off the field</p>
            </div>
            <div class="hero-images">
                <img src="~/img/basketball_1.png" alt="Basketball 1" />
                <img src="~/img/baseball_1.png"   alt="Baseball 1" />
                <img src="~/img/basketball_2.png" alt="Basketball 2" />
            </div>
        </section>

        <!-- UNLOCK SECTION -->
        <section class="unlock-section">
            <div class="unlock-bg">
                <h2>Unlock Your Full Potential</h2>
                <p>
                    Whether you’re a student-athlete looking to maximize your brand or a business searching 
                    for top-tier athlete partnerships, we’re here to connect you to the right opportunities.
                </p>
                <a asp-page="/Services/Index" class="learn-more-btn">
                    Learn about our Athlete First Approach
                </a>
            </div>
        </section>

        <!-- FEATURED ATHLETES -->
        <section class="featured-athletes">
            <div class="featured-bg">
                <h2>Featured Athletes</h2>
                <p>
                    Meet some of the incredible athletes we work with and see how Players Club Management is making an impact 
                    in their careers.
                </p>
                <a asp-page="/Athletes/Index" class="meet-athletes-btn">
                    Meet Our Exceptional Athletes →
                </a>
            </div>
        </section>

        <!-- WHY US? -->
        <section class="why-us">
            <h2>Why Us?</h2>
            <div class="why-us-cards">
                <div class="why-card">
                    <p>
                        We focus on empowering student-athletes as micro-influencers and equipping them 
                        with financial literacy, brand-building strategies, and opportunities for long-term wealth creation.
                    </p>
                    <a asp-page="/Services/Index" class="why-card-btn">Learn more</a>
                </div>
                <div class="why-card">
                    <p>
                        PCM prioritizes high school and collegiate athletes who have valuable NIL (Name, 
                        Image, and Likeness) opportunities, even without professional contracts.
                    </p>
                    <a asp-page="/Services/Index" class="why-card-btn">Learn more</a>
                </div>
                <div class="why-card">
                    <p>
                        PCM believes in tech-forward solutions, exploring AI-driven content and leveraging 
                        digital marketing to maximize exposure.
                    </p>
                    <a asp-page="/Services/Index" class="why-card-btn">Learn more</a>
                </div>
            </div>
        </section>

        <!-- CALL TO ACTION -->
        <section class="cta-section">
            <h2>GET STARTED TODAY</h2>
            <p>
                Ready to take your NIL journey to the next level? Contact us today and let’s build your brand together! 
                <a asp-page="/Contact_Us/Index" class="underline-link">Get in Touch</a>
            </p>
        </section>

        <!-- FOOTER -->
        <footer class="footer">
            <div class="footer-top">
                <nav class="footer-top-nav">
                    <a href="#">License</a>
                    <a href="#">-</a>
                    <a href="#">Terms of Use</a>
                    <a href="#">-</a>
                    <a href="#">Privacy Policy</a>
                    <a href="#">-</a>
                    <a href="#">Cookie Policy</a>
                </nav>
            </div>
            <div class="footer-main">
                <div class="footer-brand">
                    <img src="~/img/footer-logo.png" alt="logo" class="footer-logo" />
                    <nav class="footer-nav-vertical">
                        <a asp-page="/Home/Index">Home</a>
                        <a asp-page="/Athletes/Index">Our Athletes</a>
                        <a asp-page="/Services/Index">Our Services</a>
                        <a asp-page="/Contact_Us/Index">Contact Us</a>
                        <a asp-page="/About_Us/Index">About Us</a>
                        <a href="#">Blog</a>
                    </nav>
                </div>
                <!-- Instagram Icon -->
                <div class="footer-social home-footer-social">
                    <a href="https://www.instagram.com/playersclubmgmt/" target="_blank" class="footer-social-link home-footer-social-link">
                        <img src="../img/footer-insta.png" alt="Instagram" class="footer-insta home-footer-insta" />
                        <span class="footer-social-text home-footer-social-text">Follow us on Instagram!</span>
                    </a>
                </div>
                <div class="admin-login-container">
                    <a href="#" id="admin-login-btn">Admin Login</a>
                </div>
            </div>            
        </footer>
    </div> <!-- end page-container -->

    <!-- ADMIN LOGIN MODAL -->
    <div id="admin-modal" class="modal">
        <div class="modal-content">
            <span class="modal-close">&times;</span>
            <h2>Admin Login</h2>
            <form id="admin-login-form">
                <input type="text" id="admin-username" placeholder="Username" required />
                <input type="password" id="admin-password" placeholder="Password" required />
                <button type="submit">Log In</button>
            </form>
        </div>
    </div>

    <script>
        // Modal show/hide logic
        const adminBtn = document.getElementById('admin-login-btn');
        const modal    = document.getElementById('admin-modal');
        const closeBtn = document.querySelector('.modal-close');

        adminBtn.addEventListener('click', e => {
            e.preventDefault();
            modal.style.display = 'flex';
        });

        closeBtn.addEventListener('click', () => {
            modal.style.display = 'none';
        });

        window.addEventListener('click', e => {
            if (e.target === modal) {
                modal.style.display = 'none';
            }
        });

        document.getElementById('admin-login-form').addEventListener('submit', function(e) {
            e.preventDefault();
            // TODO: wire up your authentication logic here
        });
    </script>
</body>
</html>
