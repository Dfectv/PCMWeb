@page
@{
    ViewData["Title"] = "Contact Us";
}
<div class="banner">
    <div class="rectangle"></div>
    <div class="text-wrapper">Contact Us</div>    
</div>
<!-- CONTACT HEADER -->
<div class="contact-header">
    <h1>Contact Us</h1>
    <div class="contact-subtitle">
        <p>Have questions or want to work with us?</p>
        <p>Reach out today!</p>
    </div>
</div>
<div class="hero-section">
    <img class="hero-image" src="~/img/image-3.png" alt="Hero Image" />

    <div class="contact-card">
        <div class="text-wrapper-2">Contact Information</div>

        <div class="group-2">
            <img class="image-2" src="~/img/phone.png" alt="Phone Icon" />
            <div class="text-wrapper-4">Phone: (909) 232-2422</div>
        </div>

        <div class="group-email">
            <img class="email-icon" src="~/img/email.png" alt="Email Icon" />
            <div class="email-info">
                Email: <a href="mailto:playersclubmamtsjz@gmail.com">playersclubmamtsjz@gmail.com</a>
            </div>
        </div>

        <div class="group-instagram">
            <img class="insta-icon" src="~/img/insta.png" alt="Instagram Icon" />
            <div class="instagram-info">
                Instagram: <a href="https://www.instagram.com/playersclubmgmt/" target="_blank">@@playersclubmgmt</a>
            </div>
        </div>

        <div class="text-wrapper-3">Submit an Inquiry</div>

        <!-- New contact form -->
        <form class="contact-form" method="post" action="#">
            <label for="name">Name</label>
            <input type="text" id="name" name="Name" placeholder="Your Name" required />

            <label for="email">Email Address</label>
            <input type="email" id="email" name="Email" placeholder="you@example.com" required />

            <label for="message">Message</label>
            <textarea id="message" name="Message" rows="6" placeholder="Your message hereâ€¦" required></textarea>

            <button type="submit">Send Message</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}
